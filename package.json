{
  "name": "little-hero-server",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon"
  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node src/index.ts",
    "delay": 1000
  },
  "dependencies": {
    "@types/node": "^17.0.6"
  }
}
